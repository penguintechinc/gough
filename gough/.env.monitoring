# Gough Hypervisor - Monitoring and Logging Environment Configuration
# Phase 10.2 Infrastructure Setup

# ================================
# MONITORING CONFIGURATION
# ================================

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=gough-admin-2024
GF_SECURITY_SECRET_KEY=gough-grafana-secret-key-32-characters

# AlertManager Configuration
ALERTMANAGER_PORT=9093

# Alert Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=gough-alerts@yourdomain.com
EMAIL_PASSWORD=your-app-password

# ================================
# LOGGING CONFIGURATION
# ================================

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ES_JAVA_OPTS=-Xms2g -Xmx2g
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=gough-elastic-2024

# Logstash Configuration
LOGSTASH_PORT=5044
LS_JAVA_OPTS=-Xms1g -Xmx1g

# Kibana Configuration
KIBANA_PORT=5601
KIBANA_ENCRYPTION_KEY=gough-kibana-encryption-key-32-chars

# Filebeat Configuration
FILEBEAT_ELASTICSEARCH_HOSTS=elasticsearch:9200
FILEBEAT_LOGSTASH_HOSTS=logstash:5044

# ================================
# SECURITY CONFIGURATION
# ================================

# SSL/TLS Configuration (optional)
SSL_ENABLED=false
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem

# Authentication Configuration
AUTH_ENABLED=false
LDAP_ENABLED=false
LDAP_SERVER=ldap.yourdomain.com
LDAP_PORT=389

# ================================
# RESOURCE LIMITS
# ================================

# JVM Memory Settings
ELASTICSEARCH_HEAP_SIZE=2g
LOGSTASH_HEAP_SIZE=1g

# Container Resource Limits
PROMETHEUS_MEMORY_LIMIT=1g
GRAFANA_MEMORY_LIMIT=512m
ALERTMANAGER_MEMORY_LIMIT=256m

# ================================
# BACKUP AND RETENTION
# ================================

# Data Retention Policies
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_PATH=/opt/gough/backups

# ================================
# PERFORMANCE TUNING
# ================================

# Elasticsearch Performance
ES_INDICES_MEMORY_INDEX_BUFFER_SIZE=10%
ES_INDICES_QUERIES_CACHE_SIZE=10%
ES_INDICES_FIELDDATA_CACHE_SIZE=20%

# Logstash Performance
LOGSTASH_PIPELINE_WORKERS=4
LOGSTASH_PIPELINE_BATCH_SIZE=125
LOGSTASH_PIPELINE_BATCH_DELAY=50

# Prometheus Performance
PROMETHEUS_QUERY_MAX_CONCURRENCY=20
PROMETHEUS_QUERY_TIMEOUT=2m

# ================================
# DEBUGGING AND LOGGING
# ================================

# Log Levels
PROMETHEUS_LOG_LEVEL=info
GRAFANA_LOG_LEVEL=info
ELASTICSEARCH_LOG_LEVEL=info
LOGSTASH_LOG_LEVEL=info
KIBANA_LOG_LEVEL=info
FILEBEAT_LOG_LEVEL=info

# Debug Mode
DEBUG_MODE=false
VERBOSE_LOGGING=false